<%= form_for @location do |f| %>

  <div>
    <%= f.label :name %>
    <br />
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :pic_url %>
    <br />
    <%= f.text_field :pic_url %>
  </div>

  <div>
    <%= f.label :review %>
    <br />
    <%= f.text_area :review, size: "25x15" %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
